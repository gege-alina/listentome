	<div class="row">
		<div class="col-lg-8 js-bodyContainer ">
			<!--<%= image_tag("videoframe.png", :alt => "video frame" , :class => "img-responsive") %>-->
			<div class="col-lg-offset-2 col-lg-8">
				<div class="flex-video widescreen">
				<!-- Forma generala pentru video youtube, autoplay 1, start = momentul de timp de pe site -->
				  <embed src="https://youtube.com/v/<%= @youtubeId %>&start=<%= @startTime %>&autoplay=1&wmode=transparent"
				         width="640" height="390"></embed>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
		  <% if user_signed_in? %>
			<div class="row" style="margin-bottom:20px">
				<div class="col-lg-10 col-lg-offset-1">
					<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
	  				Adauga o noua melodie
					</button>
					<!-- Modal -->
					<div class=" js-modalContainer modal fade in pull-right" id="myModal" role="dialog" >
					  <div class="modal-dialog">
					  	<%= render "songs/form" %>
					  </div><!-- /.modal-dialog -->
					</div><!-- /.modal -->
				</div>
			</div>
		  <% end %>
			<div class="panel panel-default">
	  <!-- Default panel contents -->
			  <div class="panel-heading">Playlist</div>
			  <!-- List group -->
			  <ul class="list-group">
			  <% @songs.each do |song| %>
			    <li class="list-group-item"><a href="#{song.link}"><%= song.title %></a></li>
			    <% end %>
			  </ul>
			</div>
		</div>
	</div>
