<div class="modal-content">
  <%= form_for(@song) do |f| %>
    <div class="modal-body">

      <div class="form-group">
        <%= f.label :title %><br />
        <%= f.text_field :title, :autofocus => true, :placeholder => "Enter title", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :link %><br />
        <%= f.text_field :link, :placeholder => "Enter youtube link", :class => "form-control" %>
      </div>
      
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary">Save changes</button>
    </div>
  <% end %>
</div><!-- /.modal-content -->